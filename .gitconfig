[user]
    name = freepius
    email = contact@freepius.net

[color]
    diff = auto
    status = auto
    branch = auto

[core]
    excludesfile = ~/dotfiles/.global_gitignore

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log -p
    lol = log --decorate --pretty=oneline --abbrev-commit --all --graph
    addremove = !git add . && git ls-files --deleted | xargs --no-run-if-empty git rm
    d = difftool

[push]
    default = tracking
[diff]
    tool = vimdiff
[difftool]
    prompt = false
